<table class="table is-narrow is-striped is-bordered">
  <thead>
    <th>Nome</th>
    <th>Jogadores</th>
    <% if current_user.admin %>
      <th>Operações</th>
    <% end %>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%= team.nome %></td>
      <td class="td-has-ul">
        <ul>
        <% team.users.each do |user| %>
          <li><%= user.nome %></li>
        <% end %>
        </ul>
      </td>
      <% if current_user.admin %>
        <td><%= link_to "Editar", edit_team_path(team), :class => 'button' %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
