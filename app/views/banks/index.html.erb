<div class="container">
  <div class="columns">
    <div class="column is-2">
      <%= link_to new_bank_path, :class => 'button is-primary' do %>
        <i class="fa fa-plus"></i>&nbsp;
        Banco
      <% end %>
    </div>
    <div class="column">
      Clique no botão ao lado para criar um novo Banco.
    </div>
  </div>
  <hr>
  <table class="table is-narrow is-striped is-bordered">
    <thead>
      <th>Nome</th>
      <th>Operações</th>
    </thead>
    <tbody>
      <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.nome %></td>
        <td>
          <%= link_to "Editar", edit_bank_path(bank), :class => 'button' %>
          <% if bank.ativo %>
            <%= link_to "Inativar", toggle_status_bank_path(bank), :method => :post, remote: true, :class => 'button' %>
          <% else %>
            <%= link_to "Ativar", toggle_status_bank_path(bank), :method => :post, remote: true, :class => 'button' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
