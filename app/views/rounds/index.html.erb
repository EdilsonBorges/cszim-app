<div class="container">
  <div class="columns">
    <div class="column is-2">
      <%= link_to new_company_path, :class => 'button is-primary' do %>
        <i class="fa fa-plus"></i>&nbsp;
        Empresa
      <% end %>
    </div>
    <div class="column">
      Clique no botão ao lado para criar um nova Empresa.
    </div>
  </div>
  <hr>
  <table class="table is-narrow is-striped is-bordered">
    <thead>
      <th>Nome</th>
      <th>Documento</th>
      <th>Telefone</th>
      <th>Operações</th>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
      <tr>
        <td><%= company.nome %></td>
        <td><%= format_documento company.documento %></td>
        <td><%= format_phone company.telefone %></td>
        <td>
          <%= link_to "Editar", edit_company_path(company), :class => 'button' %>
          <% if company.ativo %>
            <%= link_to "Inativar", toggle_status_company_path(company), :method => :post, remote: true, :class => 'button' %>
          <% else %>
            <%= link_to "Ativar", toggle_status_company_path(company), :method => :post, remote: true, :class => 'button' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="column has-text-centered">
    <%= paginate @companies %>
  </div>
</div>
